<div class="jumbotron">
  <h1>Hello <%= @user.name() %></h1>
  <p>This is your main page. You can view your current keywords, add keywords, and see all postings matching your keywords.</p>
  <br>

  <% if @keywords.any?() %>
  <h3>Current keywords</h3>
    <!-- <ul> -->
      <% @keywords.each() do |keyword| %>
        <p><%= keyword.keyword() %></p>
      <% end %>
    <!-- </ul> -->
  <% else %>
    <p>
      You don't have any keywords, add some below!
    </p>
  <% end %>
  <br>
  <br>
  <form class="" action="/users/<%= @user.id() %>/keywords/new" method="post">
    <div class="form-group">
      <label for="new_keyword">New Keyword to Track</label>
      <input class="form-control" type="text" name="new_keyword" placeholder="i.e. brunette">
    </div>
    <button class="form-control" name="button">Add</button>
  </form>
  <br>
<hr>
  <h3>Matching Posts</h3>
  <% if @posts.any?() %>
    <ul>
      <% @posts.each() do |post| %>
        <li><%= post.url() %></li>
      <% end %>
    </ul>
  <% else %>
    <p>
      You don't have any matching posts, add some different keywords!
    </p>
  <% end %>
</div>
